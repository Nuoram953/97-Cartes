<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/title_background"
            android:gravity="center"
            android:text="97 Cartes"
            android:textAlignment="gravity"
            android:textColor="@color/title_font"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Button" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_objectif"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_objectif_row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:paddingRight="10dp"
                    android:scaleType="fitEnd"
                    app:srcCompat="@android:drawable/arrow_up_float" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:height="100dp"
                    android:background="@drawable/background_objectif"
                    android:padding="10dp"
                    android:text="1"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:paddingRight="10dp"
                    android:scaleType="fitEnd"
                    app:srcCompat="@android:drawable/arrow_down_float" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:height="100dp"
                    android:background="@drawable/background_objectif"
                    android:padding="10dp"
                    android:text="1"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_objectif_row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:height="100dp"
                    android:background="@drawable/background_objectif"
                    android:padding="10dp"
                    android:text="1"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="false"
                    android:baselineAlignBottom="false"
                    android:cropToPadding="false"
                    android:paddingLeft="10dp"
                    android:scaleType="fitStart"
                    app:srcCompat="@android:drawable/arrow_up_float" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:height="100dp"
                    android:background="@drawable/background_objectif"
                    android:padding="10dp"
                    android:text="1"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:paddingLeft="10dp"
                    android:scaleType="fitStart"
                    app:srcCompat="@android:drawable/arrow_down_float" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_card_row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="25dp"
                android:layout_weight="0.3"
                android:background="@drawable/background_card_high"
                android:backgroundTintMode="screen"
                android:padding="10dp"
                android:text="1"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/card6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="25dp"
                android:layout_weight="0.3"
                android:background="@drawable/background_card_low"
                android:padding="10dp"
                android:text="1"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_card_row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="25dp"
                android:layout_weight="0.3"
                android:height="100dp"
                android:background="@drawable/background_card_mid"
                android:padding="10dp"
                android:text="1"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="25dp"
                android:layout_weight="0.3"
                android:background="@drawable/background_card_high"
                android:padding="10dp"
                android:text="1"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_card_row3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="25dp"
                android:layout_weight="0.3"
                android:background="@drawable/background_card_mid"
                android:padding="10dp"
                android:text="1"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/card8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="25dp"
                android:layout_weight="0.3"
                android:background="@drawable/background_card_mid"
                android:padding="10dp"
                android:text="1"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_card_row4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="25dp"
                android:layout_weight="0.3"
                android:background="@drawable/background_card_low"
                android:padding="10dp"
                android:text="1"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="25dp"
                android:layout_weight="0.3"
                android:background="@drawable/background_card_high"
                android:padding="10dp"
                android:text="1"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>